@model OnePlanPetJourney.Models.Lead
@{
    ViewData["Title"] = "Create Lead";
}

<h1>Create Lead</h1>

<form asp-action="CreateLead" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CatCount" class="form-label"></label>
        <input asp-for="CatCount" class="form-control" type="number" />
        <span asp-validation-for="CatCount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DogCount" class="form-label"></label>
        <input asp-for="DogCount" class="form-control" type="number" />
        <span asp-validation-for="DogCount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Lead</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
