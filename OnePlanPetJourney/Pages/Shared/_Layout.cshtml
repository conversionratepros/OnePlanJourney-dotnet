@*
  Razor Pages Layout (independent of MVC Views)
  Location: /Pages/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnePlanPetJourney</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
      <link rel="stylesheet" href="~/css/wizard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modal.css" asp-append-version="true" />

    <style>
 
    </style>
</head>
<body>
       <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-blue bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/images/logo.png" class="navbar-img" />
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @await Html.PartialAsync("~/Pages/Shared/_StepWizard.cshtml")

            </div>
        </div>
    </div>

   

        <main role="main" class="pb-3">
            <div class="container-fluid">

           
            @RenderBody()
             </div>
        </main>
  

    
      <div class="modal" tabindex="-1" role="dialog" id="CallMePopUp">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-white mx-auto">We are excited to make your day better!</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                @await Html.PartialAsync("_CallMe")
            </div>
        </div>
    </div>

    

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center p-3">
                    &copy; @DateTime.Now.Year - Oneplan
                </div>
            </div>
           
        </div>
    </footer>

    <!-- Bootstrap JS + validation scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
