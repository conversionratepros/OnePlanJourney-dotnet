@page
@model OnePlanPetJourney.Pages.Admin.PageAddressesModel

@{
    ViewData["Title"] = "All Addresses";
}

<h1>All Addresses</h1>

@if (Model.Addresses == null || !Model.Addresses.Any())
{
    <p>No addresses found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lead Id</th>
                <th>Physical Address Line 1</th>
                <th>Physical Address Line 2</th>
                <th>Physical City</th>
                <th>Physical Postal Code</th>
                <th>Delivery Address Line 1</th>
                <th>Delivery Address Line 2</th>
                <th>Delivery City</th>
                <th>Delivery Postal Code</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var address in Model.Addresses)
        {
            <tr>
                <td>@address.Id</td>
                <td>@address.leadId</td>
                <td>@address.PhysicalAddressLineOne</td>
                <td>@address.PhysicalAddressLineTwo</td>
                <td>@address.PhysicalCity</td>
                <td>@address.PhysicalPostalCode</td>
                <td>@address.DeliveryAddressLineOne</td>
                <td>@address.DeliveryAddressLineTwo</td>
                <td>@address.DeliveryCity</td>
                <td>@address.DeliveryPostalCode</td>
            </tr>
        }
        </tbody>
    </table>
}
