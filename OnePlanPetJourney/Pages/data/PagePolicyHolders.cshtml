@page
@model OnePlanPetJourney.Pages.Admin.PagePolicyHoldersModel

@{
    ViewData["Title"] = "All Policy Holders";
}

<h1>All Policy Holders</h1>

@if (Model.PolicyHolders == null || !Model.PolicyHolders.Any())
{
    <p>No policy holders found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lead Id</th>
                <th>Title</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>ID Number</th>
                <th>Mobile</th>
                <th>Alt Mobile</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Consented</th>
                <th>Marketing</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var holder in Model.PolicyHolders)
        {
            <tr>
                <td>@holder.Id</td>
                <td>@holder.LeadId</td>
                <td>@holder.Title</td>
                <td>@holder.FirstName</td>
                <td>@holder.LastName</td>
                <td>@holder.IdNumber</td>
                <td>@holder.MobileNumber</td>
                <td>@holder.AltMobileNumber</td>
                <td>@holder.EmailAddress</td>
                <td>@holder.Gender</td>
                <td>@(holder.hasConcented ? "Yes" : "No")</td>
                <td>@(holder.marketing ? "Yes" : "No")</td>
            </tr>
        }
        </tbody>
    </table>
}
