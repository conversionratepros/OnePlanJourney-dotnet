@page
@model OnePlanPetJourney.Pages.Admin.PageLeadsModel

@{
    ViewData["Title"] = "All Leads";
}

<h1>All Leads in Database</h1>

@if (Model.Leads == null || !Model.Leads.Any())
{
    <p>No leads found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>DOB</th>
                <th>Province</th>
                <th>Cats</th>
                <th>Dogs</th>
                <th>Total Pets</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var lead in Model.Leads)
        {
            <tr>
                <td>@lead.Id</td>
                <td>@lead.FirstName</td>
                <td>@lead.LastName</td>
                <td>@lead.MobileNumber</td>
                <td>@lead.Email</td>
                <td>@(lead.DOB.HasValue ? lead.DOB.Value.ToString("yyyy-MM-dd") : "-")</td>
                <td>@lead.Province</td>
                <td>@lead.CatCount</td>
                <td>@lead.DogCount</td>
                <td>@lead.Pets?.Count</td>
            </tr>
        }
        </tbody>
    </table>
}
